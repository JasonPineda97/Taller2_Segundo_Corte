<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#2C2738"
>

    <TextView
            android:layout_marginTop="200dp"
            android:hint="Hobbies"
            android:paddingLeft="10dp"
            android:textSize="35sp"
            android:textStyle="normal"
            android:id="@+id/hobbies"
            android:layout_height="50dp"
            android:background="@drawable/cuadros_entrada"
            app:layout_constraintStart_toStartOf="@id/guideline4"
            app:layout_constraintEnd_toStartOf="@id/guideline5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
    />

    <TextView
            android:layout_marginTop="30dp"
            android:hint="Hobbies"
            android:textSize="30sp"
            android:textStyle="normal"
            android:paddingLeft="10dp"
            android:id="@+id/hobbies_mod"
            android:layout_height="wrap_content"
            android:background="@drawable/cuadros_entrada"
            app:layout_constraintStart_toStartOf="@id/guideline4"
            app:layout_constraintEnd_toStartOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/hobbies"
            android:layout_width="0dp"
    />

    <Button
            android:paddingTop="10dp"
            android:id="@+id/modificar_hobbies"
            android:layout_marginTop="28dp"
            android:textSize="17sp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:background="@drawable/color_boton"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            android:text="Modificar hobbies"
            app:layout_constraintStart_toStartOf="@id/guideline4"
            app:layout_constraintEnd_toStartOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/hobbies_mod"
            android:layout_width="0dp" android:gravity="center_horizontal"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.30"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90"
    />

</androidx.constraintlayout.widget.ConstraintLayout>